{
  "name": "tms-server",
  "version": "1.0.0",
  "description": "Backend for the TMS application with secure transportation management",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon --config nodemon.json server.js",
    "build": "echo \"No build step required for server.\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "node db/init.js",
    "db:migrate": "node db/migrate.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t tms-server .",
    "docker:run": "docker run -p 3000:3000 tms-server"
  },
  "keywords": [
    "tms",
    "transportation",
    "logistics",
    "backend",
    "api"
  ],
  "author": "Krzysztof Stolarski",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "bwip-js": "^4.3.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "papaparse": "^5.4.1",
    "pdfkit": "^0.15.0",
    "pg": "^8.12.0",
    "validator": "^13.12.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  }
}
